{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "HaKafkaNet" : "Information",
      "MyHome": "Debug"
    }
  },
  "NLog":{
    "rules":[
      {
        "logger": "Microsoft.*",
        "minLevel": "Warn",
        "finalMinLevel":"Warn"
      },
      {
        "logger": "System.Net.*",
        "minLevel": "Warn",
        "finalMinLevel":"Warn"
      },
      {
        "logger": "MyHome.*",
        "minLevel": "Debug",
        "finalMinLevel":"Debug"
      },
      {
        "logger": "HaKafkaNet.*",
        "minLevel": "Debug",
        "finalMinLevel": "Debug"
      }
    ]
  },
  "AllowedHosts": "*",

  "Otlp": {
    "Endpoint": "http://otelcollector:4317"
  }
}
